    <appender name="RecommendLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/recommend.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
